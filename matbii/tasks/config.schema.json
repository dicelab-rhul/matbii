{
    "experiment_info": {
        "type": "dict",
        "schema": {
            "path": {
                "type": "string",
                "default": "./"
            },
            "id": {
                "type": "string",
                "default": "null"
            },
            "duration": {
                "type": "integer",
                "default": -1
            },
            "meta": {
                "type": "dict",
                "default": {}
            }
        },
        "default": {}
    },
    "participant_info": {
        "type": "dict",
        "schema": {
            "id": {
                "type": "string",
                "default": "null"
            },
            "meta": {
                "type": "dict",
                "default": {}
            }
        },
        "default": {}
    },
    "enable_tasks": {
        "type": "list",
        "schema": {
            "type": "string"
        },
        "default": [
            "system_monitoring",
            "resource_management",
            "tracking"
        ]
    },
    "window_x": {
        "type": "integer",
        "min": 0,
        "default": 0
    },
    "window_y": {
        "type": "integer",
        "min": 0,
        "default": 0
    },
    "window_width": {
        "type": "integer",
        "min": 0,
        "default": 640
    },
    "window_height": {
        "type": "integer",
        "min": 0,
        "default": 480
    },
    "window_title": {
        "type": "string",
        "default": "matbii"
    },
    "window_background_color": {
        "type": "color",
        "default": "#ffffff"
    },
    "window_fullscreen": {
        "type": "boolean",
        "default": false
    },
    "window_resizable": {
        "type": "boolean",
        "default": false
    },
    "enable_video_recording": {
        "type": "boolean",
        "default": false
    },
    "eyetracking_enabled": {
        "type": "boolean",
        "default": false
    },
    "eyetracking_calibration_check": {
        "type": "boolean",
        "default": false
    },
    "eyetracking_throttle": {
        "type": "integer",
        "default": -1
    },
    "eyetracking_moving_average_n": {
        "type": "integer",
        "default": 5
    },
    "eyetracking_velocity_threshold": {
        "type": "float",
        "default": 0.5
    },
    "logging_level": {
        "type": "string",
        "default": "debug"
    },
    "logging_path": {
        "type": "string",
        "default": "./logs/"
    },
    "canvas_size": {
        "type": "list",
        "default": [
            800,
            600
        ]
    },
    "canvas_offset": {
        "type": "list",
        "default": [
            0,
            0
        ]
    }
}